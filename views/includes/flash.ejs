<% if (success && success.length) { %>
  <div class="alert alert-success alert-dismissible fade show col-md-6 offset-md-3 shadow-sm rounded-3" role="alert">
    <i class="bi bi-check-circle-fill me-2"></i>
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div class="alert alert-danger alert-dismissible fade show col-md-6 offset-md-3 shadow-sm rounded-3" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
