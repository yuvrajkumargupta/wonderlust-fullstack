<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <div class="col-8 offset-2 create-listing-form">
    <h3 class="mb-4">Drop Your Treasure.....</h3>

    <form method="POST" 
          action="/listings" 
          novalidate class="needs-validation"
          enctype="multipart/form-data">

      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input class="form-control" type="text" id="title" name="listing[title]" placeholder="Enter title" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a title.</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea id="description" name="listing[description]" class="form-control" placeholder="Enter description" rows="4" required></textarea>
        <div class="invalid-feedback">Please enter a description.</div>
      </div>

      <!-- Price & Country -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price (â‚¹):</label>
          <input type="number" id="price" class="form-control" name="listing[price]" placeholder="1200" required>
          <div class="invalid-feedback">Please provide a valid price.</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country:</label>
          <input type="text" id="country" class="form-control" name="listing[country]" placeholder="India" required>
          <div class="invalid-feedback">Please fill valid country name!</div>
        </div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location:</label>
        <input type="text" id="location" class="form-control" name="listing[location]" placeholder="Enter location" required>
        <div class="invalid-feedback">Please provide a valid location.</div>
      </div>

      <!-- Image Upload -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input type="file" id="image" class="form-control" name="listing[image]" required>
        <div class="invalid-feedback">Please upload an image.</div>
      </div>

      <!-- Submit Button -->
      <button class=" btn-create" type="submit">Showcase It</button>
    </form>
  </div>
</div>
<br>
